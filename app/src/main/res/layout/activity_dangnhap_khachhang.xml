<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.DangNhapKhachHangActivity"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/pngtree_coffe"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_dangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/iconuser"
            android:hint="Tên đăng nhập"
            android:padding="20px"></EditText>

        <EditText
            android:id="@+id/edt_matkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/iconpass"
            android:hint="Mật khẩu"
            android:padding="20px"
            android:password="true"></EditText>

        <CheckBox
            android:id="@+id/saveUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lưu tài khoản đăng nhập"></CheckBox>
<!--        <ProgressBar-->
<!--            android:layout_centerInParent="true"-->
<!--            android:id="@+id/progressBar2"-->
<!--            android:layout_gravity="center"-->
<!--            style="?android:attr/progressBarStyleHorizontal"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:indicatorColor="@color/vang"-->
<!--            app:trackColor="@color/xanh"-->
<!--            />-->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar2"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            app:indicatorColor="@color/vang"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/rv_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:trackColor="@color/xanh" />

        <Button
            android:id="@+id/btn_dangnhap"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="Đăng nhập"></Button>

        <Button
            android:id="@+id/btn_dangky"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="Đăng Ký"></Button>

        <TextView
            android:id="@+id/tv_quenmk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Quên mật khẩu?"
            android:textStyle="bold"></TextView>
    </LinearLayout>



</RelativeLayout>